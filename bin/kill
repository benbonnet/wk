#!/usr/bin/env bash
set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Killing processes on ports 3000 and 3036...${NC}"

# Kill processes on port 3000
if lsof -ti:3000 > /dev/null 2>&1; then
  lsof -ti:3000 | xargs kill -9 2>/dev/null
  echo -e "${GREEN}✓ Killed processes on port 3000${NC}"
else
  echo -e "${YELLOW}No processes running on port 3000${NC}"
fi

# Kill processes on port 3036
if lsof -ti:3036 > /dev/null 2>&1; then
  lsof -ti:3036 | xargs kill -9 2>/dev/null
  echo -e "${GREEN}✓ Killed processes on port 3036${NC}"
else
  echo -e "${YELLOW}No processes running on port 3036${NC}"
fi

# Kill processes on port 3036
if lsof -ti:7700 > /dev/null 2>&1; then
  lsof -ti:7700 | xargs kill -9 2>/dev/null
  echo -e "${GREEN}✓ Killed processes on port 7700${NC}"
else
  echo -e "${YELLOW}No processes running on port 7700${NC}"
fi


echo -e "${GREEN}Done!${NC}"
