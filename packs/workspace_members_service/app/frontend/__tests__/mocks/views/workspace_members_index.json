  "drawers": {
    "add_drawer": {
      "title": "invite_member",
      "elements": [
        {
          "type": "FORM",
          "elements": [
            {
              "type": "GROUP",
              "elements": [
                {
                  "type": "INPUT_EMAIL",
                  "name": "email",
                  "label": "email",
                  "placeholder": "email_placeholder",
                  "hint": "email_hint"
                },
                {
                  "type": "INPUT_SELECT",
                  "name": "role",
                  "label": "role",
                  "hint": "role_hint",
                  "options": [
                    {
                      "label": "admin",
                      "value": "admin",
                      "description": "admin_description"
                    },
                    {
                      "label": "manager",
                      "value": "manager",
                      "description": "manager_description"
                    },
                    {
                      "label": "editor",
                      "value": "editor",
                      "description": "editor_description"
                    }
                  ]
                }
              ],
              "classname": "flex flex-col flex-shrink min-h-0 overflow-y-scroll p-6 space-y-6"
            },
            {
              "type": "GROUP",
              "elements": [
                {
                  "type": "SUBMIT",
                  "label": "save",
                  "loadingLabel": "saving",
                  "classname": "w-full justify-center"
                }
              ],
              "classname": "flex-shrink-0 py-3 px-6 border-t bg-white"
            }
          ],
          "classname": "flex flex-col h-full min-h-0",
          "action": "create",
          "notification": {
            "success": "member_added",
            "error": "member_add_failed"
          }
        }
      ],
      "className": "w-1/3"
    },
    "edit_drawer": {
      "title": "edit_member",
      "elements": [
        {
          "type": "FORM",
          "elements": [
            {
              "type": "GROUP",
              "elements": [
                {
                  "type": "INPUT_EMAIL",
                  "name": "email",
                  "label": "email",
                  "placeholder": "email_placeholder",
                  "hint": "email_hint"
                },
                {
                  "type": "INPUT_SELECT",
                  "name": "role",
                  "label": "role",
                  "hint": "role_hint",
                  "options": [
                    {
                      "label": "admin",
                      "value": "admin",
                      "description": "admin_description"
                    },
                    {
                      "label": "manager",
                      "value": "manager",
                      "description": "manager_description"
                    },
                    {
                      "label": "editor",
                      "value": "editor",
                      "description": "editor_description"
                    }
                  ]
                }
              ],
              "classname": "flex flex-col flex-shrink min-h-0 overflow-y-scroll p-6 space-y-6"
            },
            {
              "type": "GROUP",
              "elements": [
                {
                  "type": "SUBMIT",
                  "label": "save",
                  "loadingLabel": "saving",
                  "classname": "w-full justify-center"
                }
              ],
              "classname": "flex-shrink-0 py-3 px-6 border-t bg-white"
            }
          ],
          "classname": "flex flex-col h-full min-h-0",
          "action": "update",
          "use_record": true,
          "notification": {
            "success": "member_updated",
            "error": "member_update_failed"
          }
        }
      ],
      "className": "w-1/3"
    }
  },
  "elements": [
    {
      "type": "PAGE",
      "title": "page_title",
      "description": "page_description",
      "actions": [
        {
          "type": "LINK",
          "label": "invite_member",
          "opens": "add_drawer",
          "variant": "primary",
          "icon": "plus"
        }
      ],
      "elements": [
        {
          "type": "GROUP",
          "elements": [
            {
              "type": "TABLE",
              "columns": [
                {
                  "name": "name",
                  "type": "DISPLAY_TEXT",
                  "label": "name",
                  "sortable": true
                },
                {
                  "name": "email",
                  "type": "DISPLAY_TEXT",
                  "label": "email",
                  "sortable": true
                },
                {
                  "name": "role",
                  "type": "DISPLAY_BADGE",
                  "label": "role",
                  "options": [
                    {
                      "label": "admin",
                      "value": "admin",
                      "variant": "purple"
                    },
                    {
                      "label": "manager",
                      "value": "manager",
                      "variant": "blue"
                    },
                    {
                      "label": "editor",
                      "value": "editor",
                      "variant": "gray"
                    }
                  ]
                },
                {
                  "name": "status",
                  "type": "DISPLAY_BADGE",
                  "label": "status",
                  "options": [
                    {
                      "label": "active",
                      "value": "active",
                      "variant": "green"
                    },
                    {
                      "label": "blocked",
                      "value": "blocked",
                      "variant": "red"
                    },
                    {
                      "label": "pending",
                      "value": "pending",
                      "variant": "yellow"
                    }
                  ]
                },
                {
                  "name": "created_at",
                  "type": "DISPLAY_DATE",
                  "label": "joined"
                }
              ],
              "rowActions": {
                "icon": "ellipsis",
                "elements": [
                  {
                    "type": "LINK",
                    "label": "edit",
                    "opens": "edit_drawer",
                    "icon": "pencil"
                  },
                  {
                    "type": "LINK",
                    "label": "resend_invite",
                    "api": "resend_invite",
                    "notification": {
                      "success": "invite_resent",
                      "error": "invite_resend_failed"
                    },
                    "icon": "mail",
                    "condition": {
                      "field": "status",
                      "equals": "pending"
                    }
                  },
                  {
                    "type": "LINK",
                    "label": "block",
                    "api": "block",
                    "notification": {
                      "success": "member_blocked",
                      "error": "member_update_failed"
                    },
                    "icon": "ban",
                    "confirm": {
                      "title": "block_title",
                      "description": "block_description",
                      "confirm_label": "block_confirm",
                      "variant": "destructive"
                    },
                    "condition": {
                      "field": "status",
                      "equals": "active"
                    },
                    "params": {
                      "data": {
                        "blocked": true
                      }
                    }
                  },
                  {
                    "type": "LINK",
                    "label": "unblock",
                    "api": "block",
                    "notification": {
                      "success": "member_unblocked",
                      "error": "member_update_failed"
                    },
                    "icon": "check-circle",
                    "condition": {
                      "field": "status",
                      "equals": "blocked"
                    },
                    "params": {
                      "data": {
                        "blocked": false
                      }
                    }
                  },
                  {
                    "type": "LINK",
                    "label": "remove",
                    "api": "destroy",
                    "notification": {
                      "success": "member_removed",
                      "error": "member_remove_failed"
                    },
                    "icon": "trash",
                    "confirm": {
                      "title": "remove_title",
                      "description": "remove_description",
                      "confirm_label": "remove_confirm",
                      "variant": "destructive"
                    },
                    "variant": "destructive"
                  }
                ]
              },
              "classname": "bg-white rounded-lg border",
              "searchable": true,
              "search_placeholder": "search_placeholder",
              "page_size": 20
            }
          ],
          "classname": "flex flex-col space-y-6 p-6"
        }
      ],
      "classname": "bg-slate-50"
    }
  ],
  "url": "/api/v1/workspaces/workspace_members",
  "api": {
    "index": {
      "method": "GET",
      "path": ""
    },
    "create": {
      "method": "POST",
      "path": ""
    },
    "update": {
      "method": "PUT",
      "path": ":id"
    },
    "destroy": {
      "method": "DELETE",
      "path": ":id"
    },
    "block": {
      "method": "POST",
      "path": ":id/block"
    },
    "resend_invite": {
      "method": "POST",
      "path": ":id/resend_invite"
    }
  }
}