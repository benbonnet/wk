              "elements": [
                {
                  "type": "INPUT_TEXT",
                  "name": "first_name",
                  "label": "first_name",
                  "placeholder": "first_name_placeholder"
                },
                {
                  "type": "INPUT_TEXT",
                  "name": "last_name",
                  "label": "last_name",
                  "placeholder": "last_name_placeholder"
                },
                {
                  "type": "INPUT_TEXT",
                  "name": "email",
                  "label": "email"
                },
                {
                  "type": "INPUT_TEXT",
                  "name": "phone",
                  "label": "phone"
