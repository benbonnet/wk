                      "value": "prefer_not_to_say"
                    }
                  ]
                },
                {
                  "type": "INPUT_DATE",
                  "name": "date_of_birth",
                  "label": "date_of_birth"
                }
              ]
            },
            {
              "type": "GROUP",
              "name": "spouse_attributes",
              "label": "spouse",
              "elements": [
                {
                  "type": "INPUT_TEXT",
                  "name": "spouse_attributes.first_name",
                  "label": "first_name"
                },
                {
                  "type": "INPUT_TEXT",
                  "name": "spouse_attributes.last_name",
                  "label": "last_name"
                }
              ]
            },
            {
              "type": "FORM_ARRAY",
              "name": "addresses_attributes",
              "label": "addresses",
              "addLabel": "add_address",
              "removeLabel": "remove_address",
              "template": [
                {
                  "type": "INPUT_TEXT",
                  "name": "label",
                  "label": "label"
                },
                {
                  "type": "INPUT_TEXT",
                  "name": "address_line_1",
                  "label": "address_line_1"
                },
                {
                  "type": "INPUT_TEXT",
                  "name": "city",
                  "label": "city"
                },
                {
                  "type": "INPUT_TEXT",
                  "name": "postal_code",
                  "label": "postal_code"
                },
                {
                  "type": "INPUT_TEXT",
                  "name": "country",
                  "label": "country"
                }
              ]
            },
            {
              "type": "RELATIONSHIP_PICKER",
              "name": "children_attributes",
              "cardinality": "many",
              "relationSchema": "contact",
              "columns": [
                {
                  "name": "first_name",
                  "type": "DISPLAY_TEXT"
                },
                {
                  "name": "last_name",
                  "type": "DISPLAY_TEXT"
                }
              ],
              "template": [
                {
                  "type": "INPUT_TEXT",
                  "name": "first_name",
                  "label": "first_name"
                },
                {
                  "type": "INPUT_TEXT",
                  "name": "last_name",
                  "label": "last_name"
                }
              ]
            }
